<div
    style=" display: flex ; flex-direction: column; align-items: center; padding-left: 2rem; align-items: flex-start; width: 15%; border: 2px ; min-width: 180px; max-width:190px">
    <div style="padding-bottom: 1rem;">
        <div>
            <span><strong>CATEGORY</strong></span>
        </div>
        {{#each categories}}
        <label class="d-flex" style="align-items: baseline">
            <input type="checkbox" class="category-control-input" data-category="{{this.categoryName}}">
            <span class="text-black" style="padding-left: .5rem;">{{this.categoryName}}</span>
        </label>
        {{/each}}
    </div>
    <div style="padding-bottom: 1rem;">
        <div>
            <span><strong>BRAND</strong></span>
        </div>
        {{#each brands}}
        <label class="d-flex">
            <input type="checkbox" class="brand-control-input" data-brand="{{this}}">
            <span class="text-black" style="padding-left: .5rem;">{{this}}</span>
        </label>
        {{/each}}
    </div>
    <div style="padding-bottom: 1rem;">
        <div>
            <span><strong>COLOR</strong></span>
        </div>
        {{#each colors}}
        <label class="d-flex">
            <input type="checkbox" class="color-control-input" data-color="{{this}}">
            <span class="text-black"style="padding-left: .5rem;" >{{this}}</span>
        </label>
        {{/each}}
    </div>
    <div>
        <div>
            <span><strong>PRICE RANGE</strong></span>
        </div>
        <div>
            <label class="d-flex">
                <input type="checkbox" class="price-control-input" data-range="lt1000">
                <span class="text-black"style="padding-left: .5rem;" >Under ₹1,000</span>
            </label>
            <label class="d-flex">
                <input type="checkbox" class="price-control-input" data-range="lt1500">
                <span class="text-black"style="padding-left: .5rem;" >₹1,000 - ₹1,500</span>
            </label>
            <label class="d-flex">
                <input type="checkbox" class="price-control-input" data-range="lt2000">
                <span class="text-black"style="padding-left: .5rem;" >₹1,500 - ₹2,000</span>
            </label>
            <label class="d-flex">
                <input type="checkbox" class="price-control-input" data-range="lt2500">
                <span class="text-black"style="padding-left: .5rem;" >₹2,000 - ₹2,500</span>
            </label>
            <label class="d-flex">
                <input type="checkbox" class="price-control-input" data-range="gt2500">
                <span class="text-black"style="padding-left: .5rem;" >Over ₹2,500</span>
            </label>
        </div>
    </div>
</div>

