<body class="vertical light">
  <div class="wrapper">
    {{>adminSidebar}}
    <main role="main" class="main-content">
      <div class="container-fluid">
        <div class="row justify-content-center">
          <div class="col-12">
            {{>adminHeader}}
            <table class="table table-borderless table-striped">
              <thead>
                <tr role="row">
                  <th>User Id</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                {{#each users}}
                <tr>
                  <th scope="col">{{this._id}}</th>
                  <td>{{this.name}}</td>
                  <td>{{this.email}}</td>
                  <td>
                    {{#if this.blocked}}
                    <a onclick="window.location.href='/admin/adminUn_block_user?userId={{this._id}}'"><button
                        type="button" class="btn mb-2 btn-success">Un_block</button></a>
                    {{else}}
                    <a onclick="window.location.href='/admin/adminblock_user?userId={{this._id}}'"><button type="button"
                        class="btn mb-2 btn-danger">block</button></a>
                    {{/if}}
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>

          <div>
            <div class="col-lg-12">
              <div class="pagination" style="display: flex; justify-content: center;">
                <ul style="list-style: none; padding: 0; margin: 0; display: flex; align-items: center;">
                  {{#if (gt currentPage 1)}}
                  <li style="margin-right: 10px;"><a href="/admin/allUsers?page={{sub currentPage 1}}"><button
                        class="btn mb-2 btn-primary">Previous</button></a></li>
                  {{/if}}

                  {{#each pages}}
                  {{#if (eq this ../currentPage)}}
                  <li style="margin-right: 10px;" class="active"><a href="#"><button type="button"
                        class="btn mb-2 btn-secondary" style="background-color: rgb(62, 64, 64);">{{this}}</button></a></li>
                  {{else}}
                  <li style="margin-right: 10px;"><a href="/admin/allUsers?page={{this}}"><button type="button"
                        class="btn mb-2 btn-secondary">{{this}}</button></a></li>
                  {{/if}}
                  {{/each}}

                  {{#if (lt currentPage totalPages)}}
                  <li style="margin-right: 10px;"><a href="/admin/allUsers?page={{add currentPage 1}}"><button
                        class="btn mb-2 btn-primary">Next</button></a></li>
                  {{/if}}
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</body>